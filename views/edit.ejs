<% include partials/header %>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>Edit <%= resource.name %></h1>
            </div>
            <div class="well col-lg-8 col-lg-offset-2">
                <form action="/resources/<%= resource._id %>/?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="resource[name]" placeholder="Name" value="<%= resource.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="resource[image]" placeholder="Image" value="<%= resource.image %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="resource[type]" placeholder="Type" value="<%= resource.type %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="resource[author]" placeholder="Author" value="<%= resource.author %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="resource[description]" placeholder="Description" value="<%= resource.description %>">
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary btn-block" type="submit" value="Update Resource">
                    </div>
                </form>
            </div>
        </div>
        <p>
            <a href="/">Go Back</a>
        </p>
    </div>

    <% include partials/footer %>