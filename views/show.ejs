<% include partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= image %>">
                <div class="caption-full">
                    <h4><a><%=name%></a></h4>
                    <p><%= description %></p>
                    <p>Added by <%=addedBy %></p>
                    <p>On <%= date %></p>
                    <a href="/resources/<%= id %>/edit" class="btn btn-warning">Edit</a>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/resources/<%= id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %> 
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>


<% include partials/footer %>