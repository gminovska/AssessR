<% include ../partials/header %>
<div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>What are your thoughts on <%= resource.name %>?</h1>
            </div>
            <div class="well col-lg-8 col-lg-offset-2">
                <form action="/resources/<%= resource._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment" placeholder="Your Comment">
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary btn-block" type="submit" value="Post Comment">
                    </div>
                </form>
            </div>
        </div>
        <p>
            <a href="/">Go Back</a>
        </p>
    </div>

<% include ../partials/footer %>